<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
	<div class="container">
		<div class="page-content">
			<div class="margin-bottom">
				<div class="flex" id="top-bar-div">
					<div class="flex-1" id="app-title-div">
						<h1 class="app-title">
							<i class="fa-solid fa-money-bill-trend-up"></i>
							Stocks
						</h1>
					</div>
					<div class="flex-1 pr" id="search-box-div">
						<input type="search" class="search-text" placeholder="Search Stocks" name="SearchText" />
						<i class="fa-solid fa-gear"></i>
						<button class="button button-blue-back login-button ml">Login</button>
					</div>
				</div>
			</div>
			<div class="navbar mb">
				<ul>
					@if (ViewBag.CurrentUrl == "~/explore")
					{
						<li class="nav-active">
							<a asp-controller="Stocks" asp-action="Explore">Explore</a>
						</li>
					}
					else
					{
						<li><a asp-controller="Stocks" asp-action="Explore">Explore</a></li>
					}
					@if (ViewBag.CurrentUrl == "~/trade/index")
					{
						<li class="nav-active"><a asp-controller="Trade" asp-action="Index">Trade</a></li>
					}
					else
					{
						<li><a asp-controller="Trade" asp-action="Index">Trade</a></li>
					}
					@if (ViewBag.CurrentUrl == "~/trade/orders")
					{
						<li class="nav-active">
							<a asp-controller="Trade" asp-action="Orders">Orders</a>
						</li>
					}
					else
					{
						<li><a asp-controller="Trade" asp-action="Orders">Orders</a></li>
					}
				</ul>
			</div>
			<div class="flex">
				<div class="flex-1">
					<div class="text-grey ml">
						<span>Stocks</span>
						<i class="fa-solid fa-caret-right"></i>
						<span>@ViewBag.PrintedUrl</span>
					</div>
				</div>
				@if (ViewBag.CurrentUrl == "~/trade/orders")
				{
					<div class="flex-1 text-right">
						<a asp-controller="Trade" asp-action="OrdersPDF" class="mr">Download as PDF</a>
					</div>
				}
			</div>
			@RenderBody()
		</div>
	</div>
	@await RenderSectionAsync("scripts", required: false)
</body>
</html>
