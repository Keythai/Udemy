@model IEnumerable<IOrderResponse>
@{
	Layout = null;
}
<link href="@("http://"+Context.Request.Host.ToString()+"/StyleSheet.css")" rel="stylesheet" />
<h1>Orders</h1>
<table class="table w-100 mt">
	<thead>
		<tr>
			<th>Date and Time</th>
			<th>Stock</th>
			<th>Order Type</th>
			<th>Quantity</th>
			<th>Price</th>
			<th>Trade Amount</th>
		</tr>
	</thead>
	<tbody>

		@foreach (IOrderResponse order in Model)
		{
			<tr>
				<td>@order.DateAndTimeOfOrder.ToString("yyyy-MM-dd HH:mm:ss")</td>
				<td>@order.StockName</td>
				<td>@order.TypeOfOrder</td>
				<td>@order.Quantity</td>
				<td>@order.Price.ToString("C")</td>
				<td>@order.TradeAmount</td>
			</tr>
		}

	</tbody>
</table>