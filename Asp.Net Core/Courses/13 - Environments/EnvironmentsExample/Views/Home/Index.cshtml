@{
	ViewBag.Title = "Home";
}
<h1>Home</h1>
<div class="box">
	Environment: @ViewBag.CurrentEnvironment
</div>

@*only development*@
<environment include="Development">
	<button class="button button-blue-back">Button only for Development Environment</button>
</environment>

@*except development*@
<environment exclude="Development">
	<button class="button button-green-back">Button only for Except Development Environment</button>
</environment>