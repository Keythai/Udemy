@model PersonAndProductWrapperModel

<!DOCTYPE html>
<html>
	<head>
		<title>Person with product</title>
		<meta charset="utf-8" />
		<link href="~/StyleSheet.css" rel="stylesheet" />
	</head>
	<body>
		<div class="page-content">
			<h1>Person and Product</h1>
			<div class="box w-50">
				<h3>Person</h3>
				<table class="table w-100">
					<tbody>
						<tr>
							<td>Person  Name</td>
							<td>@Model.PersonData.Name</td>
						</tr>
						<tr>
							<td>Gender</td>
							<td>@Model.PersonData.PersonGender</td>
						</tr>
						<tr>
							<td>Date of birth</td>
							<td>@Model.PersonData.DateOfBirth</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="box w-50">
				<h3>Product</h3>
			<table class="table w-100">
				<tbody>
					<tr>
						<td>Product Id</td>
						<td>@Model.ProductData.ProductId</td>
					</tr>
					<tr>
						<td>Product Name</td>
						<td>@Model.ProductData.ProductName</td>
					</tr>
				</tbody>
			</table>
			</div>
		</div>
	</body>
</html>