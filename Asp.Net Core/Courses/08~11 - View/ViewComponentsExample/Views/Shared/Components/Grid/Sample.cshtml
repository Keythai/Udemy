@model PersonGridModel // << strong-typed, or use weakly-typed as ViewBag or ViewData
<div class="box">
	<h3>@Model.GridTitle</h3>
	<table class="table w-100">
		<thead>
			<tr>
				<th>Sl. No</th>
				<th>Name</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Person _person in Model.Persons){
				<tr>
					<td>@_person.PersonName</td>
					<td>@_person.JobTitle</td>
				</tr>
			}
		</tbody>
	</table>
</div>