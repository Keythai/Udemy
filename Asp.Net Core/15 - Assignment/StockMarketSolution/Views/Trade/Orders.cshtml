@{
	ViewBag.Title = "Orders";
	ViewBag.CurrentUrl = "~/trade/orders";
	ViewBag.PrintedUrl = "Orders";
}
@model Orders

<div class="flex orders-list">
	<div id="buy-orders-list">
		<div class="box">
			<h4 class="text-grey">Buy Orders</h4>
			@foreach (var order in Model.BuyOrders)
			{
				<div class="border-bottom p">
					<h3>@order.StockName (@order.StockSymbol)</h3>
					<h5 class="mb">@order.Quantity <span class="text-grey">shares at</span> $@order.Price.ToString("N")</h5>
					<h5 class="mb"><span class="text-grey">Trade Amount:</span> @order.TradeAmount.ToString("N")</h5>
					<div class="text-grey">@order.DateAndTimeOfOrder.ToString("dd MMMM yyyy hh:mm:ss tt")</div>
				</div>
			}
			@if (Model.BuyOrders.Count == 0)
			{
				<div class="mt text-blue">No Buy Orders</div>
			}
		</div>
	</div>

	<div id="sell-orders-list">
		<div class="box">
			<h4 class="text-grey ml">Sell Orders</h4>
			@foreach (var order in Model.SellOrders)
			{
				<div class="border-bottom p">
					<h3>@order.StockName (@order.StockSymbol)</h3>
					<h5 class="mb">@order.Quantity <span class="text-grey">shares at</span> $@order.Price.ToString("N")</h5>
					<h5 class="mb"><span class="text-grey">Trade Amount:</span> @order.TradeAmount.ToString("N")</h5>
					<div class="text-grey">@order.DateAndTimeOfOrder.ToString("dd MMMM yyyy hh:mm:ss tt")</div>
				</div>
			}
			@if (Model.SellOrders.Count == 0)
			{
				<div class="mt text-blue">No Buy Orders</div>
			}
		</div>
	</div>
</div>